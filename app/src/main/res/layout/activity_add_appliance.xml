<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <!-- Your EditTexts and Button here -->

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Appliance Name" />

    <EditText
        android:id="@+id/editTextPurchaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Purchase Date (YYYY-MM-DD)" />

    <EditText
        android:id="@+id/editTextWarrantyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Warranty Expiry (YYYY-MM-DD)" />

    <EditText
        android:id="@+id/editTextAmcDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AMC Expiry (Optional)" />

    <EditText
        android:id="@+id/editTextNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Appliance"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"/>

</LinearLayout>
